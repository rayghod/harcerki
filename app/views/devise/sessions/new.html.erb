<div class="row">
<div class="col-md-12">
<div class="col-md-3">
<h2>Zaloguj się</h2>
</div>
</div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
<div class="col-md-12">
<div class="col-md-3">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class =>"form-control" %>
  </div>

  <div class="field">
    <%= f.label :hasło %><br />
    <%= f.password_field :password, autocomplete: "on",:class =>"form-control" %>
  </div>
</div>
</div>
</div>
<div class="col-md-12">
<div class="col-md-3">
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :zapamętaj_mnie %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Zaloguj się", :class =>"btn btn-primary" %>
  </div>
</div>
</div>
<% end %>

<%= render "devise/shared/links" %>
